{
	"compilerOptions": {
		"baseUrl": ".",
		"resolveJsonModule": true,
		"jsx": "react",
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES6",
		"allowJs": true,
		"noEmit": true,
		"noImplicitAny": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"paths": {
			"@/*": ["./src/*"]
		},
		"isolatedModules": true,
		"strictNullChecks": true,
		"lib": ["DOM", "ES5", "ES6", "ES7"],
		"typeRoots": ["./node_modules/@types", "./node_modules/obsidian"]
	},
	"include": ["**/*.ts", "*.d.ts"]
}
